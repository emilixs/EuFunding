<div class="min-h-screen bg-slate-50/50">
  <div class="max-w-7xl mx-auto px-6 py-8 space-y-8">
    <!-- Header Navigation -->
    <div class="flex items-center gap-3 text-slate-600 hover:text-slate-800 cursor-pointer transition-colors w-fit">
      <%= link_to root_path, class: "flex items-center gap-3 text-slate-600 hover:text-slate-800 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        <span class="text-sm font-medium">Back to Search</span>
      <% end %>
    </div>

    <!-- Company Profile Card -->
    <div class="border-0 shadow-sm bg-white/80 backdrop-blur-sm rounded-lg">
      <div class="pb-6 p-6">
        <div class="flex items-start justify-between">
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-slate-100 rounded-lg">
                <svg class="w-6 h-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <div>
                <h1 class="text-2xl font-semibold text-slate-900 tracking-tight"><%= @company.company_name %></h1>
                <p class="text-sm text-slate-500 mt-1">Software Development Company</p>
              </div>
            </div>
          </div>
          <div class="bg-emerald-50 text-emerald-700 border border-emerald-200 hover:bg-emerald-50 px-3 py-1.5 rounded-md inline-flex items-center">
            <div class="w-2 h-2 bg-emerald-500 rounded-full mr-2 animate-pulse"></div>
            <%= @company.data_source_info %>
          </div>
        </div>
      </div>

      <div class="pt-0 p-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Company Information -->
          <div class="space-y-5">
            <h3 class="font-semibold text-slate-800 text-sm uppercase tracking-wider">Company Details</h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">CUI</span>
                <span class="font-medium text-slate-900"><%= @company.cui %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">Fiscal Activity</span>
                <div class="bg-emerald-50 text-emerald-700 border border-emerald-200 px-2 py-1 rounded text-xs">
                  <%= @company.api_response['FiscalActivity'] %>
                </div>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">Legal Form</span>
                <span class="font-medium text-slate-900"><%= @company.api_response['LegalForm'] %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">NACE Code</span>
                <span class="font-medium text-slate-900"><%= @company.api_response['NACE'] %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">Registration</span>
                <span class="font-medium text-slate-900"><%= @company.api_response['Date'] %></span>
              </div>
            </div>
          </div>

          <!-- Location -->
          <div class="space-y-5">
            <h3 class="font-semibold text-slate-800 text-sm uppercase tracking-wider">Location</h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">City</span>
                <span class="font-medium text-slate-900"><%= @company.api_response['City'] %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">County</span>
                <span class="font-medium text-slate-900"><%= @company.api_response['County'] %></span>
              </div>
              <div class="space-y-2">
                <span class="text-slate-500 text-sm">Address</span>
                <p class="text-sm font-medium text-slate-900 leading-relaxed">
                  <%= @company.api_response['Address'] %>
                </p>
              </div>
            </div>
          </div>

          <!-- Financial Info -->
          <div class="space-y-5">
            <h3 class="font-semibold text-slate-800 text-sm uppercase tracking-wider">Financial Overview</h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">Employees</span>
                <div class="bg-blue-50 text-blue-700 border border-blue-200 px-2 py-1 rounded text-xs">
                  <%= @company.api_response['Employees'] %> employees
                </div>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">Turnover</span>
                <span class="font-semibold text-slate-900">RON <%= number_with_delimiter(@company.api_response['Turnover']) %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-slate-500 text-sm">Profit</span>
                <span class="font-semibold text-emerald-600">RON <%= number_with_delimiter(@company.api_response['Profit']) %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Eligible Programs Section -->
    <% if @eligible_programs.any? %>
      <div class="space-y-6">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h2 class="text-xl font-semibold text-emerald-700">Eligible Programs</h2>
          <div class="bg-emerald-50 text-emerald-700 border border-emerald-200 px-2 py-1 rounded text-xs">
            <%= @eligible_programs.count %> programs
          </div>
        </div>

        <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
          <% @eligible_programs.each_with_index do |item, index| %>
            <% program = item[:program] %>
            <% check = item[:check] %>
            <% data = parse_ai_analysis(check.ai_response) %>
            <% status_info = eligibility_status_info(data[:result]) %>

            <!-- Program Card -->
            <div class="border-0 shadow-sm bg-white hover:shadow-md transition-all duration-200 group rounded-lg">
              <div class="pb-4 p-6">
                <div class="flex items-start justify-between">
                  <div class="space-y-2 flex-1">
                    <div class="flex items-center gap-2">
                      <div class="w-1 h-8 bg-emerald-500 rounded-full"></div>
                      <h3 class="font-semibold text-slate-900"><%= program.title %></h3>
                    </div>
                    <p class="text-slate-600 text-sm leading-relaxed">
                      <%= program.description.present? ? truncate(program.description, length: 150) : "Support for companies developing or implementing environmentally friendly technologies, renewable energy solutions, and sustainable business practices." %>
                    </p>
                  </div>
                </div>
              </div>

              <div class="space-y-5 p-6 pt-0">
                <div class="flex items-center justify-between p-3 bg-emerald-50 rounded-lg border border-emerald-100">
                  <div class="flex items-center gap-2">
                    <span class="text-sm text-slate-600">ü§ñ AI Analysis:</span>
                    <div class="bg-emerald-100 text-emerald-800 border border-emerald-200 hover:bg-emerald-100 px-2 py-1 rounded text-xs font-medium">
                      ‚úì ELIGIBLE
                    </div>
                  </div>
                  <div class="flex items-center gap-2">
                    <% if data[:acceptate].size > 0 %>
                      <div class="bg-emerald-100 text-emerald-800 border border-emerald-300 px-2 py-1 rounded text-xs">
                        <%= data[:acceptate].size %>
                      </div>
                    <% end %>
                    <% if data[:nevalidate].size > 0 %>
                      <div class="bg-amber-100 text-amber-800 border border-amber-300 px-2 py-1 rounded text-xs">
                        <%= data[:nevalidate].size %>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="collapse collapse-arrow" data-program-id="<%= program.id %>">
                  <input type="checkbox" />
                  <div class="collapse-title p-0">
                    <div class="flex items-center justify-between text-sm text-blue-600 hover:text-blue-700 cursor-pointer">
                      <span>View detailed AI analysis</span>
                      <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                      </svg>
                    </div>
                  </div>
                  <div class="collapse-content p-0">
                    <div class="mt-4 space-y-3 p-4 bg-slate-50 rounded-lg border border-slate-200">
                      <% if data[:nevalidate].size > 0 %>
                        <div class="flex items-center gap-2 text-sm">
                          <div class="w-2 h-2 bg-amber-500 rounded-full"></div>
                          <span class="font-medium text-amber-700">Missing Information (<%= data[:nevalidate].size %>)</span>
                        </div>
                        <p class="text-xs text-slate-600 pl-4">
                          ‚Ä¢ Specific criteria for <%= program.title %> cannot be validated as they were not provided in documentation
                        </p>
                        <div class="border-t border-slate-200 my-2"></div>
                      <% end %>
                      <div class="flex items-center gap-2 text-sm">
                        <div class="w-2 h-2 bg-emerald-500 rounded-full"></div>
                        <span class="font-medium text-emerald-700">Criteria Met (<%= data[:acceptate].size %>)</span>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="flex items-center justify-between pt-4">
                  <div class="flex gap-2">
                    <%= link_to funding_program_path(program), class: "h-8 text-xs font-medium border border-slate-300 hover:bg-slate-50 px-3 py-1.5 rounded inline-flex items-center" do %>
                      <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      Details
                    <% end %>
                    <%= link_to chat_funding_program_path(program, company_id: @company.id), class: "h-8 text-xs font-medium bg-blue-600 hover:bg-blue-700 text-white px-3 py-1.5 rounded inline-flex items-center" do %>
                      <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                      </svg>
                      Chat with AI
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Ineligible Programs Section -->
    <% if @ineligible_programs.any? %>
      <div class="space-y-4">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h2 class="text-xl font-semibold text-slate-600">Ineligible Programs</h2>
          <div class="bg-slate-100 text-slate-600 border border-slate-200 px-2 py-1 rounded text-xs">
            <%= @ineligible_programs.count %> programs
          </div>
        </div>

        <div class="collapse collapse-arrow">
          <input type="checkbox" />
          <div class="collapse-title p-0">
            <div class="border-0 shadow-sm bg-white hover:shadow-md transition-all duration-200 cursor-pointer rounded-lg">
              <div class="p-4">
                <div class="flex items-center justify-between">
                  <span class="font-medium text-slate-700 group-hover:text-slate-900">
                    View ineligible programs and reasons
                  </span>
                  <svg class="w-4 h-4 text-slate-400 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </div>
              </div>
            </div>
          </div>
          <div class="collapse-content p-0">
            <div class="mt-4 border-0 shadow-sm bg-slate-50 rounded-lg">
              <div class="p-6">
                <p class="text-slate-600">
                  <%= @ineligible_programs.count %> programs are not eligible for this company based on current criteria analysis.
                  Detailed reasoning available upon request.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- No Programs Message -->
    <% if @eligible_programs.empty? && @ineligible_programs.empty? %>
      <div class="text-center py-20">
        <div class="text-6xl mb-4">üîç</div>
        <h2 class="text-2xl font-bold mb-4">No Active Programs</h2>
        <p class="text-slate-600">
          There are currently no active EU funding programs in our database.
          Please check back later or contact an administrator to add programs.
        </p>
        <%= link_to "Search Another Company", root_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded mt-6 inline-block" %>
      </div>
    <% end %>
  </div>
</div>
