<div class="min-h-screen flex items-center justify-center bg-base-200">
  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title justify-center text-2xl mb-6">🔐 Admin Login</h2>
      
      <%= form_with url: admin_login_path, method: :post, local: true, class: "space-y-4" do |form| %>
        <div class="form-control">
          <%= form.label :username, class: "label" do %>
            <span class="label-text">Username</span>
          <% end %>
          <%= form.text_field :username, 
                              class: "input input-bordered w-full", 
                              placeholder: "Enter username",
                              required: true,
                              autofocus: true %>
        </div>

        <div class="form-control">
          <%= form.label :password, class: "label" do %>
            <span class="label-text">Password</span>
          <% end %>
          <%= form.password_field :password, 
                                  class: "input input-bordered w-full", 
                                  placeholder: "Enter password",
                                  required: true %>
        </div>

        <div class="form-control mt-6">
          <%= form.submit "Login", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider"></div>
      
      <div class="text-center">
        <%= link_to "← Back to Home", root_path, class: "btn btn-ghost btn-sm" %>
      </div>
    </div>
  </div>
</div>
