<!-- Hero Section -->
<div class="hero min-h-screen bg-base-200">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">EU Funding Check</h1>
      <p class="py-6">
        Enter your Romanian company's CUI (fiscal code) to discover eligible EU funding programs instantly.
      </p>
      
      <%= form_with url: check_path, method: :post, class: "space-y-4" do |form| %>
        <div class="form-control w-full">
          <%= form.text_field :cui, 
                             placeholder: "Enter CUI (e.g., RO12345678)", 
                             class: "input input-bordered input-lg w-full",
                             required: true %>
        </div>
        
        <%= form.submit "Check Eligibility", 
                       class: "btn btn-primary btn-lg w-full" %>
      <% end %>
      
      <p class="text-sm text-base-content/70 mt-4">
        We'll fetch your company data from official sources and analyze eligibility for active EU funding programs.
      </p>
    </div>
  </div>
</div>

